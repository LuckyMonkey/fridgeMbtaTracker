# Optional (recommended for better rate limits)
MBTA_API_KEY=

# Default station shown by /api/suffolk-downs and auto-pinned in MongoDB
DEFAULT_STOP_ID=place-sdmnl
DEFAULT_STOP_NAME=Suffolk Downs

# Walk timing indicator in the web UI
WALK_TIME_MINUTES=4

# MBTA fetch throttling + cache (reduces API load)
PREDICTIONS_FRESH_MS=60000
PREDICTIONS_STALE_MS=300000
PREDICTIONS_TIMEOUT_MS=8000
PREDICTIONS_LIMIT=16
UI_REFRESH_MS=60000
PREDICTIONS_POLL_MS=30000
PREDICTIONS_TTL_MS=60000
VITE_APP_VERSION=0.1.0
APP_VERSION=0.1.0

# Train-passing volume automation (between Suffolk Downs and Orient Heights defaults)
AUTOMATION_ENABLED=true
AUTOMATION_POLL_MS=30000
AUTOMATION_STOP_ID=place-orhte
AUTOMATION_STOP_NAME=Orient Heights
AUTOMATION_ROUTE_TYPE=1
AUTOMATION_ROUTE_ID=Blue
AUTOMATION_LEAD_MINUTES=1.15
AUTOMATION_PASS_SECONDS=90
AUTOMATION_LIMIT=14

# Optional action targets. Use either webhook, commands, or both.
AUTOMATION_WEBHOOK_URL=
AUTOMATION_WEBHOOK_TOKEN=
AUTOMATION_RAISE_COMMAND=
AUTOMATION_RESTORE_COMMAND=
